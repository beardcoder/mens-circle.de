# =============================================================================
# Coolify v4 Environment Variables for TYPO3 v14
# Copy these variables to your Coolify application settings
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=production
APP_URL=https://mens-circle.de
TYPO3_CONTEXT=Production

# -----------------------------------------------------------------------------
# Database
# Driver options: pdo_mysql (MySQL/MariaDB), pdo_pgsql (PostgreSQL)
# -----------------------------------------------------------------------------
DB_DRIVER=pdo_mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=typo3
DB_USERNAME=typo3
DB_PASSWORD=your-secure-database-password

# -----------------------------------------------------------------------------
# TYPO3 Security
# Generate with: openssl rand -hex 48
# -----------------------------------------------------------------------------
TYPO3_ENCRYPTION_KEY=your-64-character-encryption-key-here
# Generate with: php -r "echo password_hash('your-password', PASSWORD_ARGON2ID);"
TYPO3_INSTALL_TOOL_PASSWORD=$argon2id$v=19$m=65536,t=4,p=1$...

# -----------------------------------------------------------------------------
# Mail (SMTP)
# -----------------------------------------------------------------------------
MAIL_TRANSPORT=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_ENCRYPTION=tls
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=your-smtp-password
MAIL_FROM_ADDRESS=noreply@mens-circle.de
MAIL_FROM_NAME=Mens Circle
MAIL_REPLY_TO=info@mens-circle.de
MAIL_REPLY_TO_NAME=Mens Circle

# -----------------------------------------------------------------------------
# Redis (Optional - for caching and sessions)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
FORCE_SSL=true
TRUSTED_PROXIES=*
# Optional: Custom trusted hosts pattern (regex). If not set, auto-generates from APP_URL
# Example: ^(.+\.)?mens-circle\.de$ (allows mens-circle.de and all subdomains)
# TRUSTED_HOSTS=

# -----------------------------------------------------------------------------
# Admin Notifications
# -----------------------------------------------------------------------------
ADMIN_EMAIL=admin@mens-circle.de

# -----------------------------------------------------------------------------
# PHP Settings
# -----------------------------------------------------------------------------
PHP_MEMORY_LIMIT=512M
PHP_POST_MAX_SIZE=100M
PHP_UPLOAD_MAX_FILESIZE=100M
PHP_MAX_EXECUTION_TIME=240
PHP_OPCACHE_ENABLE=1
PHP_OPCACHE_VALIDATE_TIMESTAMPS=0

# -----------------------------------------------------------------------------
# serversideup/php specific
# -----------------------------------------------------------------------------
SSL_MODE=off
AUTORUN_ENABLED=false
PUID=1000
PGID=1000
