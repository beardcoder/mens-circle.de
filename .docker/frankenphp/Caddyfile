{
    {$CADDY_GLOBAL_OPTIONS}

    # Global Options
    auto_https off
    admin off
    skip_install_trust
    local_certs
    auto_https disable_redirects

    # Disable access logs (enable for debugging)
    log {
        format console
        output stderr
        level ERROR
    }

    frankenphp {
        # Worker mode is configured via FRANKENPHP_CONFIG environment variable
        # Example: FRANKENPHP_CONFIG="worker /var/www/html/public/index.php"
        # This keeps PHP processes alive between requests for much better performance
        {$FRANKENPHP_CONFIG}
    }

    # Caddy directive ordering for FrankenPHP
    order php_server before file_server
    order php before file_server
}

{$CADDY_EXTRA_CONFIG}

:80 {
    root * /var/www/html/public

    # Compression - prefer zstd for modern browsers
    encode {
        zstd
        gzip
        minimum_length 256
    }

    # Security Headers (X-Frame-Options managed by TYPO3)
    header /* {
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        X-XSS-Protection "1; mode=block"
        # Cache status header for debugging
        X-Cache-Status "HIT"
    }

    # Block sensitive files
    @blocked {
        path /.git/* /.env* /composer.* /package.* /*.md
        path /config/* /var/*
    }
    respond @blocked 403

    # Canonical path redirect (add trailing slash for directories)
    @canonicalPath {
        file {path}/index.php
        not path */
    }
    redir @canonicalPath {path}/ 308



    # TYPO3 Frontend Routing
    @frontend {
        path /*
        not path /.well-known/* /_assets/* /favicon.ico

        file {
            try_files {path} /index.php
            split_path .php
        }
    }
    rewrite @frontend {http.matchers.file.relative}

    # TYPO3 Backend Routing
    @backend {
           path /typo3/*
           not path /typo3/install.php
           file {
                try_files {path} {path}/index.php /typo3/index.php
                                       split_path .php
                }
    }
    rewrite @backend {http.matchers.file.relative}

    # Static Assets (direct serving)
    @static {
        path /fileadmin/* /_assets/* *.ico *.css *.js *.gif *.webp *.avif *.jpg *.jpeg *.png *.svg *.woff *.woff2 *.txt
        file
    }
    header @static Cache-Control "public, max-age=31536000, immutable"

    file_server @static

   {$CADDY_SERVER_EXTRA_DIRECTIVES}

    # PHP Execution
    php_server
}
