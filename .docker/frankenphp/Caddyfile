{
    # Global Options
    auto_https off
    admin off

    # Disable access logs
    log {
        format console
        level ERROR
    }

    # Caddy directive ordering for FrankenPHP
    order php_server before file_server
}

:80 {
    root * /var/www/html/public

    # Compression
    encode zstd gzip

    # Security Headers (X-Frame-Options managed by TYPO3)
    header /* {
        X-Content-Type-Options "nosniff"
        Referrer-Policy "strict-origin-when-cross-origin"
        X-XSS-Protection "1; mode=block"
    }

    # Block sensitive files
    @blocked {
        path /.git/* /.env* /composer.* /package.* /*.md
        path /config/* /var/*
    }
    respond @blocked 403

    # Canonical path redirect (add trailing slash for directories)
    @canonicalPath {
        file {path}/index.php
        not path */
    }
    redir @canonicalPath {path}/ 308

    # TYPO3 Backend Routing
    @backend {
        path /typo3/*
        not path /typo3/install.php
        file {
            try_files {path} {path}/index.php /typo3/index.php
            split_path .php
        }
    }
    rewrite @backend {http.matchers.file.relative}

    # TYPO3 Frontend Routing
    @frontend {
        not path /typo3/*
        file {
            try_files {path} {path}/index.php /index.php
            split_path .php
        }
    }
    rewrite @frontend {http.matchers.file.relative}

    # Static Assets (direct serving)
    @static {
        path /fileadmin/* /_assets/* /favicon.ico /robots.txt
        file
    }
    file_server @static

    # PHP Execution
    php_server
}
